<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="TelefonSunucu.ControlPanelPage"
            NavigationPage.HasBackButton="False"
            BarBackgroundColor="#1E1E1E"
            SelectedTabColor="#0A84FF"
            UnselectedTabColor="#AEAEB2">

    <!-- 1. Gösterge Paneli Sekmesi -->
    <ContentPage Title="Panel" BackgroundColor="#121212">
        <ContentPage.IconImageSource>
            <FontImageSource FontFamily="OpenSansRegular" Glyph="&#xE88A;" Color="#AEAEB2"/>
        </ContentPage.IconImageSource>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="20">
                <Label Text="PC Performansı" FontSize="22" FontAttributes="Bold" TextColor="White" Margin="0,10"/>
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto, Auto, Auto" ColumnSpacing="15" RowSpacing="15">
                    <!-- CPU / RAM -->
                    <Frame Grid.Row="0" Grid.Column="0" CornerRadius="20" Padding="15" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="CPU Kullanımı" FontSize="14" TextColor="#AEAEB2"/>
                            <Label x:Name="CpuUsageLabel" Text="-%" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Row="0" Grid.Column="1" CornerRadius="20" Padding="15" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="RAM Kullanımı" FontSize="14" TextColor="#AEAEB2"/>
                            <Label x:Name="RamUsageLabel" Text="- GB" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                    <!-- Sıcaklıklar -->
                    <Frame Grid.Row="1" Grid.Column="0" CornerRadius="20" Padding="15" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="CPU Sıcaklığı" FontSize="14" TextColor="#AEAEB2"/>
                            <Label x:Name="CpuTempLabel" Text="-°C" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Row="1" Grid.Column="1" CornerRadius="20" Padding="15" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="GPU Sıcaklığı" FontSize="14" TextColor="#AEAEB2"/>
                            <Label x:Name="GpuTempLabel" Text="-°C" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                    <!-- Güç Tüketimi -->
                    <Frame Grid.Row="2" Grid.Column="0" CornerRadius="20" Padding="15" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="CPU Güç" FontSize="14" TextColor="#AEAEB2"/>
                            <Label x:Name="CpuPowerLabel" Text="- W" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Row="2" Grid.Column="1" CornerRadius="20" Padding="15" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="GPU Güç" FontSize="14" TextColor="#AEAEB2"/>
                            <Label x:Name="GpuPowerLabel" Text="- W" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                        </VerticalStackLayout>
                    </Frame>
                    <!-- Ağ Hızları -->
                    <Frame Grid.Row="3" Grid.ColumnSpan="2" CornerRadius="20" Padding="20" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="25">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                <Label Text="İndirme (Download)" FontSize="14" TextColor="#AEAEB2"/>
                                <Label x:Name="NetworkDownLabel" Text="- Mbps" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                <Label Text="Yükleme (Upload)" FontSize="14" TextColor="#AEAEB2"/>
                                <Label x:Name="NetworkUpLabel" Text="- Mbps" FontSize="20" FontAttributes="Bold" TextColor="White"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <Button Text="Bağlantıyı Kes" Clicked="Disconnect_Clicked" BackgroundColor="#FF453A" CornerRadius="25" HeightRequest="50" FontSize="18" FontAttributes="Bold" Margin="0,30,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <!-- 2. Sistem Sekmesi -->
    <ContentPage Title="Sistem" BackgroundColor="#121212">
        <ContentPage.IconImageSource>
            <FontImageSource FontFamily="OpenSansRegular" Glyph="&#xE30D;" Color="#AEAEB2"/>
        </ContentPage.IconImageSource>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="20">
                <Label Text="Güç Seçenekleri" FontSize="22" FontAttributes="Bold" TextColor="White" Margin="0,10"/>
                <Frame CornerRadius="20" Padding="20" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto, Auto" ColumnSpacing="10" RowSpacing="10">
                        <Button Grid.Row="0" Grid.Column="0" Text="Uyku Modu" Clicked="SleepPc_Clicked" BackgroundColor="#3A3A3C"/>
                        <Button Grid.Row="0" Grid.Column="1" Text="Hazırda Beklet" Clicked="HibernatePc_Clicked" BackgroundColor="#3A3A3C"/>
                        <Button Grid.Row="1" Grid.Column="0" Text="Ekranı Kapat" Clicked="TurnOffScreen_Clicked" BackgroundColor="#3A3A3C"/>
                        <Button Grid.Row="1" Grid.Column="1" Text="Oturumu Kapat" Clicked="SignOut_Clicked" BackgroundColor="#3A3A3C"/>
                        <Button Grid.Row="2" Grid.Column="0" Text="Yeniden Başlat" Clicked="RestartPc_Clicked" BackgroundColor="#5856D6"/>
                        <Button Grid.Row="2" Grid.Column="1" Text="Kapat" Clicked="ShutdownPc_Clicked" BackgroundColor="#FF453A"/>
                    </Grid>
                </Frame>

                <Label Text="Uygulama Kısayolları" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,20,0,10"/>
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Button Grid.Column="0" Text="Görev Yön." Clicked="TaskManager_Clicked"/>
                    <Button Grid.Column="1" Text="Not Defteri" Clicked="Notepad_Clicked"/>
                    <Button Grid.Column="2" Text="Hesap Mak." Clicked="Calculator_Clicked"/>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <!-- 3. Medya ve Ses Sekmesi -->
    <ContentPage Title="Medya" BackgroundColor="#121212">
        <ContentPage.IconImageSource>
            <FontImageSource FontFamily="OpenSansRegular" Glyph="&#x03A3;" Color="#AEAEB2"/>
        </ContentPage.IconImageSource>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="Ses Kontrolü" FontSize="22" FontAttributes="Bold" TextColor="White" Margin="0,10"/>
            <Frame CornerRadius="20" Padding="20" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="VolumeLevelLabel" Text="Ses Seviyesi: -%" HorizontalOptions="Center" TextColor="White"/>
                    <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100" DragCompleted="VolumeSlider_DragCompleted"/>
                    <Grid ColumnDefinitions="*,*,*">
                        <Button Grid.Column="0" Text="Azalt" Clicked="VolumeDown_Clicked"/>
                        <Button Grid.Column="1" x:Name="MuteButton" Text="Sesi Kapat" Clicked="MutePc_Clicked"/>
                        <Button Grid.Column="2" Text="Artır" Clicked="VolumeUp_Clicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            <Label Text="Medya Kontrolü" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,20,0,10"/>
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Grid.Column="0" Text="Önceki" Clicked="MediaPrevious_Clicked"/>
                <Button Grid.Column="1" Text="Oynat/Durdur" Clicked="MediaPlayPause_Clicked"/>
                <Button Grid.Column="2" Text="Sonraki" Clicked="MediaNext_Clicked"/>
            </Grid>
        </VerticalStackLayout>
    </ContentPage>

    <!-- 4. Fare Sekmesi -->
    <ContentPage Title="Fare" BackgroundColor="#121212">
        <ContentPage.IconImageSource>
            <FontImageSource FontFamily="OpenSansRegular" Glyph="&#xE931;" Color="#AEAEB2"/>
        </ContentPage.IconImageSource>
        <Grid RowDefinitions="*,Auto" Padding="10" RowSpacing="10">
            <Frame Grid.Row="0" BackgroundColor="#1E1E1E" CornerRadius="15" BorderColor="#3A3A3C" Padding="0">
                <Grid>
                    <Label Text="Dokunmatik yüzey alanı" TextColor="#4A4A4C" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Grid.GestureRecognizers>
                        <PanGestureRecognizer PanUpdated="MousePad_PanUpdated"/>
                        <TapGestureRecognizer Tapped="LeftClick_Clicked" NumberOfTapsRequired="1"/>
                        <TapGestureRecognizer Tapped="RightClick_Clicked" NumberOfTapsRequired="2"/>
                    </Grid.GestureRecognizers>
                </Grid>
            </Frame>
            <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0" Text="Sol Tık" Clicked="LeftClick_Clicked"/>
                <Button Grid.Column="1" Text="Sağ Tık" Clicked="RightClick_Clicked"/>
            </Grid>
        </Grid>
    </ContentPage>

    <!-- 5. Dosya Sekmesi -->
    <ContentPage Title="Dosya" BackgroundColor="#121212">
        <ContentPage.IconImageSource>
            <FontImageSource FontFamily="OpenSansRegular" Glyph="&#xE2C7;" Color="#AEAEB2"/>
        </ContentPage.IconImageSource>
        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="20">
                <Label Text="Dosya Transferi" FontSize="22" FontAttributes="Bold" TextColor="White" Margin="0,10"/>
                <Frame CornerRadius="20" Padding="20" BackgroundColor="#1E1E1E" BorderColor="Transparent">
                    <VerticalStackLayout Spacing="15">
                        <ProgressBar x:Name="TransferProgressBar" Progress="0" />
                        <Label x:Name="TransferStatusLabel" Text="Gönderilecek dosya seçilmedi." TextColor="#AEAEB2" HorizontalTextAlignment="Center"/>
                        <Button Text="Dosya Seç ve Gönder" Clicked="SendFile_Clicked" CornerRadius="15"/>
                    </VerticalStackLayout>
                </Frame>
                <Label Text="Son Aktarımlar" FontSize="18" FontAttributes="Bold" TextColor="White" Margin="0,20,0,10"/>
                <Label Text="Aktarım geçmişi burada listelenecek." TextColor="#AEAEB2" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

</TabbedPage>
