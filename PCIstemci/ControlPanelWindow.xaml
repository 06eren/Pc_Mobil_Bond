<Window x:Class="PCIstemci.ControlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCIstemci"
        mc:Ignorable="d"
        Title="Kontrol Paneli" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1C1C1E">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Foreground" Value="#AEAEB2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Padding="{TemplateBinding Padding}" BorderBrush="Transparent" BorderThickness="0,0,0,3">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#0A84FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Label x:Name="TitleLabel" Grid.Row="0" Content="Bağlı Cihaz: -" FontSize="22" FontWeight="Bold" Foreground="White" Margin="5,0,0,10"/>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TabItem}}" Margin="0,0,8,0" Height="16" Stretch="Uniform" Data="M9.4,1.4l-2,2C7.2,3.6,7,4.1,7,4.5v9c0,1.1,0.9,2,2,2h10c1.1,0,2-0.9,2-2V7.5c0-0.4-0.2-0.8-0.4-1.1l-3-4C17.3,2.1,16.9,2,16.5,2H11C10.4,2,9.8,1.8,9.4,1.4z M12,13.5V9.5H16L12,13.5z M10,4h1.5v4.5h4.5V10h-6V4z"/>
                        <TextBlock Text="Dosya Transferi"/>
                    </StackPanel>
                </TabItem.Header>
                <Border Background="#2C2C2E" CornerRadius="10" Margin="0,10,0,0">
                    <Label Content="Dosya transferi arayüzü buraya gelecek." Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TabItem}}" Margin="0,0,8,0" Height="16" Stretch="Uniform" Data="M20,12c0-4.4-3.6-8-8-8s-8,3.6-8,8s3.6,8,8,8S20,16.4,20,12z M12,18c-3.3,0-6-2.7-6-6s2.7-6,6-6s6,2.7,6,6S15.3,18,12,18z M12,11.2L9.2,8.4C8.8,8,8.2,8,7.8,8.4s-0.4,1,0,1.4L10.6,12l-2.8,2.8c-0.4,0.4-0.4,1,0,1.4C8,16.4,8.2,16.5,8.5,16.5s0.5-0.1,0.7-0.3L12,12.8l2.8,2.8c0.2,0.2,0.5,0.3,0.7,0.3s0.5-0.1,0.7-0.3c0.4-0.4,0.4-1,0-1.4L13.4,12l2.8-2.8c0.4-0.4,0.4-1,0-1.4s-1-0.4-1.4,0L12,11.2z"/>
                        <TextBlock Text="PC Kontrol"/>
                    </StackPanel>
                </TabItem.Header>
                <Border Background="#2C2C2E" CornerRadius="10" Margin="0,10,0,0">
                    <Label Content="PC kontrol butonları buraya gelecek." Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </TabItem>
        </TabControl>

        <Label Grid.Row="2" Content="Aktivite Kaydı" FontSize="18" FontWeight="Bold" Foreground="White" Margin="5,20,0,10"/>
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Background="#2C2C2E" Padding="5">
            <TextBlock x:Name="ActivityLogTextBlock" TextWrapping="Wrap" Foreground="#AEAEB2"/>
        </ScrollViewer>

    </Grid>
</Window>
